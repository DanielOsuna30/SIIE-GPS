                            }
                        </td>
                        <td>
                            @if (materia.horas.FirstOrDefault(x => x.diassem == "Martes") != null)
                            {
                                @materia.horas.FirstOrDefault(x => x.diassem == "Martes").hora
                            }
                        </td>
                        <td>
                            @if (materia.horas.FirstOrDefault(x => x.diassem == "Miercoles") != null)
                            {
                                @materia.horas.FirstOrDefault(x => x.diassem == "Miercoles").hora
                            }
                        </td>
                        <td>
                            @if (materia.horas.FirstOrDefault(x => x.diassem == "Jueves") != null)
                            {
                                @materia.horas.FirstOrDefault(x => x.diassem == "Jueves").hora
                            }
                        </td>
                        <td>
                            @if (materia.horas.FirstOrDefault(x => x.diassem == "Viernes") != null)
                            {
                                @materia.horas.FirstOrDefault(x => x.diassem == "Viernes").hora
                            }
                        </td>
                        <td>
                            @if (materia.horas.FirstOrDefault(x => x.diassem == "Sabado") != null)
                            {
                                @materia.horas.FirstOrDefault(x => x.diassem == "Sabado").hora
                            }
                        </td>
                    </tr>
                }
