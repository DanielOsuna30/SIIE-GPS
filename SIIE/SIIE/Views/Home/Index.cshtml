                    <th>Miercoles</th>
                    <th>Jueves</th>
                    <th>Viernes</th>
                    <th>Sabado</th>
                </tr>
                @foreach (var materia in Model.Item1.materias)
                {
                    <tr style="border-bottom:1px solid gray">
