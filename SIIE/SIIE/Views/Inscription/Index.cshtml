@model List<SIIE.Models.Carrera>

@{
    ViewBag.Title = "Registrarse";
}
@section styles{
    <link rel="Stylesheet" href="@Href("~/Content/Styles/ajustes.css")" />
}
<div class="container">
    <h1>Registrarse </h1>
    <div class="col-sm-12">
        <label for="nombre">Nombre</label>
        <input type="text" class="form-control" id="Name" required>
        <label for="apellidop">Apellido paterno</label>
        <input type="text" class="form-control" id="LastNameP" required>
        <label for="apellidom">Apellido Materno</label>
        <input type="text" class="form-control" id="LastNameM" required>
        <label for="correo">Correo electronico</label>
        <input type="text" class="form-control" id="Email" required>

        <label>Genero:</label><br>
        <label for="H">Hombre</label>
        <input type="radio" value="Hombre" class="genero" name="H" id="Gender">
        <label for="M">Mujer</label>
        <input type="radio" value="Mujer" class="genero" name="M" id="Gender">
        <br>
        <br>

        <label>Nacionalidad:</label><br>
        <label for="nac">Mexicano</label>
        <input type="radio" value="Mexicano" class="genero" id="Nationality">
        <label for="nac">Extranjero</label>
        <input type="radio" value="Extranjero" class="genero" id="Nationality">
        <br>
        <br>

        <label for="edo">Estado Civil:</label><br>
        <select name="edo" id="CivilStatus">
            <option value="Soltero">Soltero</option>
            <option value="Casado">Casado</option>
        </select><br><br>

        <label for="dom">Domicilio</label>
        <input type="text" class="form-control" id="Address">

        <label for="estado">Estado</label><br>
        <select name="estado" id="State">
            <option value="bcs">baja california sur</option>
            <option value="bcs">baja california norte</option>
            <option value="bcs">jalisco</option>
            <option value="bcs">cd mx</option>
            <option value="bcs">nuevo leon</option>
            <option value="bcs">chihuahua</option>
            <option value="bcs">sonora</option>
            <option value="bcs">sinaloa</option>
            <option value="bcs">durango</option>
            <option value="bcs">cohahuila</option>
            <option value="bcs">zacatecas</option>
            <option value="bcs">san luis potosi</option>
            <option value="bcs">guanajuato</option>
            <option value="bcs">hidalgo</option>
            <option value="bcs">michoacan</option>
            <option value="bcs">puebla</option>
            <option value="bcs">puebla</option>
            <option value="bcs">veracruz</option>
            <option value="bcs">oaxaca</option>
            <option value="bcs">chiapas</option>
            <option value="bcs">tabasco</option>
            <option value="bcs">campeche</option>
            <option value="bcs">yucatan</option>
            <option value="bcs">quintana roo</option>
        </select>
        <br>
        <br>

        <label for="mun">Municipio</label>
        <input type="text" name="mun" class="form-control" id="Municipality">

        <label for="col">Colonia</label><br>
        <input type="text" name="col" class="form-control" id="Suburb">

        <label for="cp">CP</label><br>
        <input type="number" name="cp" class="form-control" maxlength="5" id="PostalCode" required>

        <label for="tel">Telefono</label><br>
        <input type="number" name="tel" class="form-control" maxlength="10" id="PhoneNumber">

        <label for="CarrerOption1">Carrera</label><br>
        <select id="CareerOption1">
        @foreach(var Carrera in @Model)
        {
            <option value="@Carrera.idCarrera">@Carrera.NombreCarrera</option>
        }
        </select>
        <br>
        <br>

        <label for="col">Contraseña</label><br>
        <input type="password" name="contraseña" class="form-control" maxlength="15" id="Password">
        <input type="submit" id="InscriptionSumbit" value="Guardar">
    </div>
</div>
