@model List<SIIE.Models.HorarioTutorias>


@{
    ViewBag.Title = "Horarios";
    ViewBag.MainBreadcrumb = "Tutorias";
    ViewBag.ChildBreadCrumb = "Horarios";
    ViewBag.ActiveTutorias = "active";
    Layout = "~/Views/Shared/_LayoutTutorias.cshtml";
}

<div class="card mb-3">
    <div class="card-header">
        <i class="fa fa-table"></i>&nbsp; Horario @Model.FirstOrDefault().Tutorias.Name
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Dia</th>
                        <th>Entrada</th>
                        <th>Salida</th>
                        <th>Aula</th>
                    </tr>
                </thead>
                <tfoot>
                    @foreach (var horario in Model)
                    {
                        <tr>
                            <td>@horario.Dia</td>
                            <td>@horario.Entrada</td>
                            <td>@horario.Salida</td>
                            <td>@horario.Salon.NombreSalon</td>
                        </tr>
                    }
                </tfoot>
            </table>
        </div>
    </div>
</div>

