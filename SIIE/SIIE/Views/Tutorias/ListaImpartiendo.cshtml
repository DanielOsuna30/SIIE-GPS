@model IEnumerable<SIIE.Models.Tutorias>

@{
    ViewBag.Title = "ListaImpartiendo";
    ViewBag.MainBreadcrumb = "Maestro";
    ViewBag.ChildBreadCrumb = "Impartiendo";
    ViewBag.ActiveCursando = "active";
    Layout = "~/Views/Shared/_LayoutTutorias.cshtml";
}

<div class="card mb-3">
    <div class="card-header">
        <i class="fa fa-table"></i>&nbsp; Impartiendo
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Materia</th>
                        <th>Horario</th>
                        <th>Alumnos</th>
                        <th>Calificaciones</th>
                    </tr>
                </thead>
                <tfoot>
                    @foreach (var materia in Model)
                    {
                        <tr>
                            <td>@materia.Name</td>
                            <td>@materia.Materia.NombreMateria</td>
                            <td><a href="/Tutorias/Horario/@materia.Id">Ver Horario</a></td>
                            <td><a href="/Tutorias/Cursando/@materia.Id">Ver Alumnos</a></td>
                            <td><a href="/Tutorias/Tutores/Calificaciones/@materia.Id">Asignar Calificaciones </a></td>
                        </tr>
                    }
                </tfoot>
            </table>
        </div>
    </div>
</div>

</table>
