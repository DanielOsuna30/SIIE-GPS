@model SIIE.Models.Alumno[]

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewBag.Title = "Alumnos";
}
@section styles{
    <link rel="Stylesheet" href="@Href("~/Content/Styles/materias.css")" />
}
<div id="content">
    <nav class="navbar navbar-default">
        <div class="navbar-header">
            <button type="button" id="sidebarCollapse" class="navbar-btn">
                <span></span>
                <span></span>
                <span></span>
            </button>
        </div>
    </nav>
    <h1>Alumnos</h1>
    <table border="1">
        <tr id="encabezado">
            <th>NO. CONTROL</th>
            <th>NOMBRE</th>
            <th>APELLIDO PATERNO</th>
            <th>APELLIDO MATERNO</th>
            <th>CARRERA</th>
            <th>SEXO</th>
            <th>FECHA DE NACIMIENTO</th>
            <th>NACIONALIDAD</th>
            <th>ESTADO</th>
            <th>MUNICIPIO</th>
            <th>DIRECCION</th>
            <th>COLONIA</th>
            <th>CODIGO POSTAL</th>
            <th>CORREO ELECTRONICO</th>
            <th>EDITAR</th>
            <th>ELIMINAR</th>
        </tr>
        @foreach (var maestro in Model)
        {
            <tr>
                <td>@maestro.noControl</td>
                <td>@maestro.Nombre</td>
                <td>@maestro.ApellidoP</td>
                <td>@maestro.ApellidoM</td>
                <td>@maestro.Carrera.NombreCarrera</td>
                <td>@maestro.Sexo</td>
                <td>@maestro.FechaNacimiento</td>
                <td>@maestro.Nacionalidad</td>
                <td>@maestro.Estado</td>
                <td>@maestro.Municipio</td>
                <td>@maestro.Direccion</td>
                <td>@maestro.Colonia</td>
                <td>@maestro.CP</td>
                <td>@maestro.Correo</td>
                <td> <a href="/Admin/Alumnos/@maestro.noControl/Edit"><img class="btn" src="~/Content/Images/Edit_48px.png" alt=""></a> </td>
                <td> <a href="/Admin/Alumnos/@maestro.noControl/Delete"><img class="btn" src="~/Content/Images/Cancel_48px.png" alt=""></a> </td>
            </tr>
        }
    </table>
</div>
